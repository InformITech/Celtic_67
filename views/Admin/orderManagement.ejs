<%- include('adminHeader') %>
    <% if(orders!='') { %>

        <% orders.forEach(function(order) { %>
            <% if (order.status!='Confirmed' && order.status !='Cancelled' ) { %>
                <center>
                    <div class="card mb-3" style="width: 80%; background: #001; margin-top: 20px;" id="card_<%= order._id %>">
                        <div class="row no-gutters">
                            <div class="col-md-4 mt-5">
                                <img src="/img/End Game.jpg" class="card-img rounded-circle img-fluid w-50" alt="">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body text-light">
                                    <h5 class="card-title">Order ID : <%= order._id %>
                                    </h5>
                                    <p class="card-text">Date & Time : <%= order.orderDate %>
                                    </p>
                                    <p class="card-text">Order Status : <%= order.status %>
                                    </p>
                                    <p class="card-text">Total Amount : <%= order.total %>
                                    </p>
                                    <p class="card-text">Payment Details : <%= order.paymentId %>
                                    </p>
                                    <div class="cart-text">
                                        <a href="/admin/orderDetails/?id=<%= order._id %>" class="btn btn-success text-white p-2 px-5 text-light border-white rounded-10">Order Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </center>
                <% } %>
                    <% }) %>

                        <% } else { %>
                            <center>
                                <div class="container-fluid m-auto">
                                    <div class="row" style="align-items: center;text-align: center;" >
                                    <h1 style="margin-top: 3%; color: red; float: left;">No Pending Orders</h1>
                                </div>
                                  </div>
                            </center>
                            <% } %>
