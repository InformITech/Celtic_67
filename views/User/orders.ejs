<%- include('userNavbar') %>
<!-- header area end -->
    <% if(orders!='' ) { %>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-content">
                        
                        <% orders.forEach(function(order,index) { %>
                            <center>
                                <div class="card mb-3 bg-dark" style="width: 80%; height: auto;">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <img src="/img/End Game.jpg" class="card-img" alt="">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title">Order ID : <%= order._id %>
                                                </h5>
                                                <p class="card-text text-light">Date & Time : <%= order.orderDate %>
                                                </p>
                                                <p class="card-text text-light">Order Status : <%= order.status %>
                                                </p>
                                                <p class="card-text text-light">Total Amount : <%= order.total %>
                                                </p>
                                                <a href="/orderDetails/?id=<%= order._id %>" class="btn btn-success p-2 px-5 text-light border-0">Order Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </center>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
        </div>
                    </div>
                </div>
            </div>
        </div>

        <% } else { %>
            <center>
                <div class="heading-section" style="margin-top: 100px;" >
                    <h4><em>No orders </em>Yet</h4>
                </div>
            </center>
        <% } %>
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
