<%- include('userNavbar') %>
	<!-- ***** Header Area End ***** -->

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-content">

					<!-- ***** Banner Start ***** -->
					<div class="main-banner">
						<div class="row">
							<div class="col-lg-7">
								<div class="header-text">
									<h6>Welcome To Cyborg</h6>
									<h4><em>Browse</em> Our Popular Games Here</h4>
									<div class="main-button">
										<a href="browse.html">Browse Now</a>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Banner End ***** -->

					<!-- ***** Most Popular Start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4><i class="fa fa-star" style="color: yellow;"></i> <em>Featured</em> Games Now </h4>
								</div>
								<div class="row">
									<% featured.forEach ( (game) => {  %>
									<div class="col-lg-3 col-sm-6" style="height: 100%;">
										<div class="item" style="height: 100%;" onclick="goToDetails('<%= game._id %>')">
											<img src="<%= game.poster %>" style="height: 250px;" alt="">
											<h4><%= game.name %><br><span><%= game.genre %></span></h4>
											<ul>
												<li><i class="fa fa-featured"></i> </li>
												<li><i class="fa fa-download"></i> <%= game.downloads %></li>
											</ul>
										</div>
									</div>
									<% }) %>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="heading-section">
									<h4><i class="fa fa-star" style="color: yellow;"></i> <em>Trending</em> Games Now </h4>
								</div>
								<div class="row">
									<% trending.forEach ( (game) => {  %>
										<div class="col-lg-3 col-sm-6" style="height: 100%;">
											<div class="item" style="height: 100%;" onclick="goToDetails('<%= game._id %>')" >
												<img src="<%= game.poster %>" style="height: 250px;" alt="">
												<h4><%= game.name %><br><span><%= game.genre %></span></h4>
												<ul>
													<li><i class="fa fa-featured"></i> </li>
													<li><i class="fa fa-download"></i> <%= game.downloads %></li>
												</ul>
											</div>
										</div>
										<% }) %>
									
									<div class="col-lg-12">
										<div class="main-button">
											<a href="/games">Discover More</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** Most Popular End ***** -->

					<!-- ***** Gaming Library Start ***** -->
					<div class="gaming-library">
